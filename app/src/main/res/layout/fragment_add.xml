<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan300"
    tools:context=".fragments.AddFragment">

    <LinearLayout
        android:background="@color/cyan300"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="80dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Porfavor, ingresar la catidad obtenida:"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="Hora:"
                    android:textColor="@color/gray900"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editTime"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="90dp"

                    android:background="@color/blanco"
                    android:ems="10"
                    android:inputType="numberDecimal" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="Fecha:"
                    android:textColor="@color/gray900"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editDate"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="90dp"
                    android:background="@color/blanco"
                    android:ems="10"
                    android:inputType="date" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="128dp">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:text="MediciÃ³n:"
                    android:textColor="@color/gray900"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="90dp"
                    android:background="@color/blanco"
                    android:ems="10"
                    android:inputType="numberSigned" />


            </TableRow>


            <Button
                android:id="@+id/btnRedondo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/borde_boton_redondo_add"
                android:text="Guardar"
                android:textColor="#218dd0"
                tools:ignore="MissingConstraints" />


        </TableLayout>

    </LinearLayout>



</ScrollView>