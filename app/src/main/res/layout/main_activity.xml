<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray400"
    tools:context=".ui.main.MainFragment">


    <!--Agregando seccion del layout con el boton -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray400"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/gradiente_index_info"
            android:src="@drawable/m2" />


        <Button
            android:id="@+id/btnRedondo"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/borde_redondo"
            android:text="Entrar"
            android:textColor="@color/purple900"
            tools:ignore="MissingConstraints" />


    <!-- Agregando seccion del layout con el logo -->

    </LinearLayout>






</ScrollView>